{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: GPU Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debugfiles/gpu_count.py",
            "console": "integratedTerminal",
            "pythonPath": "/usr/bin/python3.10"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "pythonPath": "/usr/bin/python3.10"
        },
        {
            "name": "Python: MLflow Demo with Arguments",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "/workspace/mlflow-demo",
            "args": [
                "./data/train.csv",
                "./data/test.csv",
                "1000",
                "0.1",
                "31",
                "-1",
                "20"
            ]
        }
    ]
}